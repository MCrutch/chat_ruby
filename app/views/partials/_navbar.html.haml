
#mainHeader{ role: :banner, style: 'margin-bottom:6em;' }
	%nav.navbar.navbar-fixed-top.navbar-inverse{ role: :navigation }
		.navbar-inner
			.container
				.navbar-header
					%a.navbar-brand.brand{ href: '/' }
						%i.ll-logo{ style: 'color:#ed1e5a;' }
						Ruby SG
					%button.navbar-toggle{ "data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
				#top-navigation.nav-collapse.subnav-collapse.navbar-collapse.collapse
					%ul.nav.navbar-nav.navbar-right
						%li
							%a{ href: '/' }
								Home
						- if @current_user.present?
							%li
								%a
									Hi
									= @current_user.name
							%li
								= link_to 'Log Out', logout_path, method: :delete
						- else
							%li
								= link_to 'Log In', login_path

