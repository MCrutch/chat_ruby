%h1= @category.title

.col-sm-4
  .list-group
    %ul
    - @resources.each do |resource|
      %li.list-group-item
        %h4
          = link_to resource.name, resource.url, target: "_blank"
        - if resource.description.present? == true     
          %p
            = resource.description
        - else
    
    = render "resources/form"